<section>

    <div class="container">
        <div class="row">
            <div class="col-3 mt-5 border p-3 vh-100">
                <form action="/filter-product" method="post">
                    <div class="row">
                        <div class="col-6">
                            <div class="d-flex flex-column border border-danger border-2 rounded-1 p-1 search-pro-input mt-2 ">
                                <label>Min Price</label>
                                <input value="{{ min }}" name="minPrice" class="border-0" type="text"/>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex flex-column border border-danger border-2 rounded-1 p-1 search-pro-input mt-2 ">
                                <label>Max Price</label>
                                <input value="{{ max }}" name="maxPrice" class="border-0" type="text"/>
                                <input value="{{ category }}" type="text" hidden name="category"/>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-danger mt-5 form-control" type="submit">APPLY</button>
                </form>


            </div>
            <div class="col-9 mt-5 border  vh-100">
                <div class="row">
                    <div class="col-12 border border-1" style="letter-spacing: 0.05rem;">
                        <h6 class="mt-1 ms-3">
                            <strong>{{ category }}</strong>
                        </h6>
                        <p class="ms-3 ">Showing
                            {{ products.length }}
                            Results</p>
                    </div>

                </div>

                <div class="row">
                    {{#each products}}

                        <div class="ms-2 me-5 col-lg-2 col-md-3 col-sm-4 col-6  mt-2">

                            <div class="card card-bg border rounded-2" style="width: 12rem; height:20rem">
                                <a href="/productsearch?product_name={{this.product_name}}"> <img src="images/product-images/{{ this._id }}.jpeg" 
                                class=" card-top-image border border-1 border-secondary  mb-1 rounded-2 anim"
                                alt="{{ this.product_id }}" height="200px" width="190px"/></a>
                               
                                <div class="card-body ps-1 pe-1 p-0">
                                    <div class="overflow-hidden" style="height: 2.2rem;text-overflow:clip">
                                        <p class="card-title" style="font-size: 0.9rem; ">{{ this.product_name }}</p>
                                    </div>

                                    <p class="card-text mb-2" style="font-size: 1.2rem;">
                                        <strong>{{ this.product_price }}</strong>
                                    </p>
                                    <button class="btn btn-primary form-control btn-hover" onclick="addToCart('{{ this._id }}','{{ user }}')">Add To Cart</a>
                                </div>
                            </div>
                        </div>

                    {{/each}}
                </div>

            </div>
        </div>
    </div>

</section>
